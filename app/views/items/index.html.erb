<div class="row">
<section class="col-lg-6">
<%- model_class = Item -%>
<div class="page-header">
  <h1>出品リスト</h1>
</div>

<% @items.each do |item| %>
<dl class="lecture_dl">
      <div class="item_head">
        <dt class="lecture">
        <%= item.title %>
        </dt>
        <dd class="college">
        <span><%= item.user.college.university.name%></span>
        <span><%= item.college.name%></span>
        </dd><!-- /.college -->
      </div>
      <dd>
      <dl>
        <dt class="subject">
        <span>作成者  <%= item.user.name%>さん</span>
        </dt>
        <!-- /.subject -->
        <dd class="apartContents">
        <div><div><div><div><div>
                  <div>
                    <div class="year"><div><div><div><div>
                              <dl>
                                <dt>授業を受けた年</dt>
                                <dd><%= item.year%>年</dd>
                              </dl>
                            </div></div></div></div></div><!-- /.year -->
                    <div class="item_price"><div><div><div><div>
                                      <dl>
                                        <dt>希望価格</dt>
                                        <dd><%= item.price%>円</dd>
                                      </dl>
                                    </div></div></div></div></div><!-- /.item_price -->
                  </div>
                  <div class="apartBox">
                    <div class="test"><div><div><div><div>
                              <dl>
                                <dt>詳細</dt>
                                <dd>
                                <p>
                                  <%= item.detail %>
                                </p>
                                </dd>
                              </dl>
                            </div></div></div></div></div><!-- /.test -->
                  </div><!-- /.apartBox -->
                </div></div></div></div></div>
        </dd><!-- /.apartContents -->
      </dl>
      </dd>
</dl>
<% end %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_path,
            :class => 'btn btn-primary' %>
</section>
