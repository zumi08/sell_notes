<% @colleges = [] %>
<h2>Sign up</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name, label:"名前",required: true, autofocus: true %>
    <%= f.input :email, label:"メールアドレス",required: true %>
    <%= f.input :birthday, label:"誕生日",required: true %>
    <%= f.input :adress, label:"住んでいる県",required: true %>
<div class="form-group">
    <%= label :to_college,:university_id,'学校', :class => "control-label"%>
    <%= collection_select :to_college,:university_id, University.all, :id, :name,{:prompt => "学校を選択してください。"},:class => "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :college_id, label:'配置学部', :class => "control-label"%>
  <%= f.collection_select :college_id, @colleges, :id, :name,{},:class => "form-control",:prompt => "学部を選択してください。" %>
  </div>
    <%= f.input :password, label:"パスワード",required: true, hint: ("#{@minimum_password_length} 文字以上必須です" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label:"パスワード再入力",required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
