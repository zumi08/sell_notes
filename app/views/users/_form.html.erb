<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :birthday %>
    <%= f.input :adress %>
    <%= f.input :univ %>
    <%= f.input :college %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
